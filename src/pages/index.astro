---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features3 from '~/components/widgets/Features3.astro';
import bear from '~/assets/images/bear-trim.png';
import mens from '~/assets/images/menshair.png';
import shampoo from '~/assets/images/shampoo.png';
import womens from '~/assets/images/womenshair.png';
const metadata = {
  title: 'Studio 21 â€” Hair Salon',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
	<Hero
	  actions={[
		{
		  variant: 'primary',
		  text: 'Book',
		  href: 'https://github.com/onwidget/astrowind',
		  target: '_blank',
		  icon: 'tabler:download',
		}
	  ]}
	  image={{ src: '~/assets/images/woman-1774021_1280.jpg', alt: 'Hair Hero Image' }}
	>
	  <Fragment slot="title">
		Modern Hair Styles on 21st St
	  </Fragment>
  
	  <Fragment slot="subtitle">
		EST. 2010
	  </Fragment>
	</Hero>
	
	<Features3
		title="Services"
		columns={4}
		items={[
		{image: {src: bear, alt:'beard trim'}},
		{image: {src: mens, alt:'mens hair'}},
		{image: {src: shampoo, alt:'shampoo'}},
		{image: {src: womens, alt:'womens hair'}}
		

		]}
		classes={{ container: 'max-w-5xl' }}
  />
</Layout>